                    { "key": "hole_26in", "label": "26\"", "inch": 26.0, "mm": 660.4 },
                    { "key": "hole_17_5in", "label": "17 1/2\"", "inch": 17.5, "mm": 444.5 },
                    { "key": "hole_12_25in", "label": "12 1/4\"", "inch": 12.25, "mm": 311.15 },
                    { "key": "hole_8_5in", "label": "8 1/2\"", "inch": 8.5, "mm": 215.9 },
                    { "key": "hole_6in", "label": "6\"", "inch": 6.0, "mm": 152.4 }
                  ]
                }
              }
            ]
          },
          {
            "node_key": "wellops.hse",
            "title": "HSE",
            "node_type": "SECTION",
            "order": 20,
            "enabled": true,
            "selected": false
          }
        ]
      }
    ]
  },
  "rules": [
    {
      "when": { "field": "well_type", "op": "equals", "value": "DD" },
      "then": [
        { "action": "enable", "target": "wellops.drilling_program" },
        { "action": "select", "target": "wellops.drilling_program" }
      ]
    }
  ],
  "meta": {
    "created_by": "system",
    "notes": "Template contract v1"
  }
