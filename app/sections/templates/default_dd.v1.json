{
  "template_key": "default_dd",
  "name": "Default DD Template",
  "version": 1,
  "domain": "wellops",
  "root": {
    "node_key": "wellops.root",
    "title": "WellOps",
    "node_type": "GROUP",
    "order": 0,
    "children": [
      {
        "node_key": "wellops.header",
        "title": "Overview",
        "node_type": "GROUP",
        "order": 10,
        "children": [
          {
            "node_key": "wellops.well_identity",
            "title": "Well Identity",
            "node_type": "SECTION",
            "order": 10,
            "enabled": true,
            "selected": true,
            "default_state": { "focus": true }
          }
        ]
      },
      {
        "node_key": "wellops.planning",
        "title": "Planning",
        "node_type": "GROUP",
        "order": 20,
        "children": [
          {
            "node_key": "wellops.drilling_program",
            "title": "Drilling Program",
            "node_type": "SECTION",
            "order": 10,
            "enabled": true,
            "selected": true,
            "children": [
              {
                "node_key": "wellops.drilling_program.hole_sizes",
                "title": "Hole Sizes",
                "node_type": "ITEM",
                "order": 10,
                "enabled": true,
                "default_state": {
                  "mode": "single_select",
                  "selected_key": "hole_12_25in",
